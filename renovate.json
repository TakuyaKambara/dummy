{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "major",
        "pin",
        "digest",
        "lockFileMaintenance"
      ],
      "enabled": false,
      "matchPackageNames": ["*"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "groupName": "Security Updates",
    "schedule": []
  }
}
